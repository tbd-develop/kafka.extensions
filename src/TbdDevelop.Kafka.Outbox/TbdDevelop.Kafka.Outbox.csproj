<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net9.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <Title>Kafka Extensions Outbox</Title>
        <Authors>Terry Burns-Dyson</Authors>
        <Description>Implementation of Outbox to support queued publishing</Description>
        <PackageProjectUrl>https://github.com/tbd-develop/kafka.extensions</PackageProjectUrl>
        <RepositoryUrl>https://github.com/tbd-develop/kafka.extensions</RepositoryUrl>
    </PropertyGroup>

    <ItemGroup>
      <ProjectReference Include="..\TbdDevelop.Kafka.Extensions\TbdDevelop.Kafka.Extensions.csproj" />
    </ItemGroup>

    <ItemGroup>
      <PackageReference Include="Microsoft.Extensions.Hosting.Abstractions" Version="9.0.2" />
    </ItemGroup>

</Project>
